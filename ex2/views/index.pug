extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Lista de Plantas [Nº de Plantas: #{clist.length}] 
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Freguesia
          th Estado
          th Espécie  
          th Número de intervenções
        
        each c in clist
          tr
            td
              a(href="/"+c._id)= c._id
            td= c.Freguesia
            td= c.Estado
            td 
              a(href="/inst/"+c.Espécie)= c.Espécie
            td= c['Número de intervenções']
              
    footer.w3-container.w3-teal
      h5 Generated by Simao Barroso in #{d}
    