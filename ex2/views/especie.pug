extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
        each c,index in i
            if index === 0  
                h1 #{c.Espécie} [#{c['Nome Científico']}] #[a(href="/") VOLTAR]
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Freguesia
          th Estado
          th Espécie  
          th Número de intervenções

        
        each c in i
          tr
            td
              a(href="/"+c._id)= c._id
            td= c.Freguesia
            td= c.Estado
            td 
              a(href="/especies/"+c.Espécie)= c.Espécie
            td= c['Número de intervenções']
              
    footer.w3-container.w3-teal
      h5 Generated by Simao Barroso in #{d}
    